const customSelects = document.querySelectorAll(".custom-select-1")
const selectButtons = document.querySelectorAll(".select-button");
 const selectedValues = document.querySelectorAll(".selected-value");
 const optionsLists = document.querySelectorAll(".select-dropdown");

customSelects.forEach((customSelect, index) => {
  const selectBtn = selectButtons[index];
  const selectedValue = selectedValues[index];
  const optionsList = optionsLists[index];

  // Initialize the default selection
  const defaultOption = optionsList.querySelector('input:checked + label');
  if (defaultOption) {
    selectedValue.innerHTML = defaultOption.innerHTML; // Use innerHTML to copy the entire structure
  }

  selectBtn.addEventListener("click", () => {
    customSelect.classList.toggle("active");
    selectBtn.setAttribute(
      "aria-expanded",
      selectBtn.getAttribute("aria-expanded") === "true" ? "false" : "true"
    );
  });

  optionsList.querySelectorAll("li").forEach((option) => {
    function handler(e) {
      if ((e.type === "click" && e.clientX !== 0 && e.clientY !== 0) || e.key === "Enter") {
        const selectedOption = option.querySelector("label");
        selectedValue.innerHTML = selectedOption.innerHTML; // Copy the full content
        customSelect.classList.remove("active");
      }
    }

    option.addEventListener("keyup", handler);
    option.addEventListener("click", handler);
  });
});

     

document.addEventListener("DOMContentLoaded", function () {
    let swiperInstance = null;

    function updateClass() {
        let cardContainer = document.querySelector(".subscription-card-container-0");
        let cardContent = document.querySelector(".inner-case-law-subscription");
        let swiperWrapper = document.querySelector(".subscription-card-container");
        let swiperSlides = document.querySelectorAll(".subscription-box-container");

        if (!cardContainer || !cardContent || !swiperWrapper || swiperSlides.length === 0) {
            return;
        }

        if (window.innerWidth < 768) {
            if (!cardContainer.classList.contains("swiper")) {
                cardContainer.classList.add("card__container", "swiper");
                cardContent.classList.add("card__content");
                swiperWrapper.classList.add("swiper-wrapper");
                swiperSlides.forEach(slide => slide.classList.add("swiper-slide"));

                if (!swiperInstance) {
                    swiperInstance = new Swiper(".inner-case-law-subscription", {
                        initialSlide: 1, // Quarterly as default
                        loop: false,
                        spaceBetween: 32,
                        grabCursor: true,
                        slidesPerView: 1,
                        speed: 600, // Consistent transition speed
                        pagination: {
                            el: ".swiper-pagination",
                            clickable: true,
                        },
                        navigation: {
                            nextEl: ".swiper-button-next",
                            prevEl: ".swiper-button-prev",
                        },
                        observer: true,
                        observeParents: true,
                        on: {
                            slideChangeTransitionStart: syncSliderWithSwiper,
                        },
                    });
                }
            }
        } else {
            if (cardContainer.classList.contains("swiper")) {
                if (swiperInstance) {
                    swiperInstance.destroy(true, true);
                    swiperInstance = null;
                }
                cardContainer.classList.remove("card__container", "swiper");
                cardContent.classList.remove("card__content");
                swiperWrapper.classList.remove("swiper-wrapper");
                swiperSlides.forEach(slide => slide.classList.remove("swiper-slide"));
            }
        }
    }

    updateClass();
    window.addEventListener("resize", updateClass);

    function syncSliderWithSwiper() {
        if (!swiperInstance) return;
        
        let slider = document.querySelector(".slider");
        let monthlyRadio = document.getElementById("monthly");
        let quarterlyRadio = document.getElementById("quarterly");
        let annuallyRadio = document.getElementById("annually");

        if (!slider || !monthlyRadio || !quarterlyRadio || !annuallyRadio) return;

        let activeIndex = swiperInstance.realIndex;
        let positions = ["0%", "33.33%", "66.66%"];
        
        // Apply smooth transition based on distance
        let currentLeft = parseFloat(slider.style.left || "33.33%");
        let targetLeft = parseFloat(positions[activeIndex]);
        let distance = Math.abs(currentLeft - targetLeft);
        let duration = distance > 33.33 ? "0.8s" : "0.6s"; // Longer duration for bigger jumps

        slider.style.transition = `left ${duration} cubic-bezier(0.68,-0.55,0.265,1.55)`;
        slider.style.left = positions[activeIndex];

        // Update radio button selection
        if (activeIndex === 0) {
            monthlyRadio.checked = true;
        } else if (activeIndex === 1) {
            quarterlyRadio.checked = true;
        } else {
            annuallyRadio.checked = true;
        }
    }

    function syncSwiperWithSlider() {
        const monthlyRadio = document.getElementById("monthly");
        const quarterlyRadio = document.getElementById("quarterly");
        const annuallyRadio = document.getElementById("annually");

        if (!monthlyRadio || !quarterlyRadio || !annuallyRadio || !swiperInstance) return;

        monthlyRadio.addEventListener("change", function () {
            if (this.checked) swiperInstance.slideTo(0);
        });

        quarterlyRadio.addEventListener("change", function () {
            if (this.checked) swiperInstance.slideTo(1);
        });

        annuallyRadio.addEventListener("change", function () {
            if (this.checked) swiperInstance.slideTo(2);
        });
    }

    setTimeout(() => {
        // Set Quarterly as default selection
        document.getElementById("quarterly").checked = true;
        document.querySelector(".slider").style.left = "33.33%";
        syncSwiperWithSlider();
    }, 1000);
});

       

            
