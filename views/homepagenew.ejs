      const swiperGradient = new Swiper(".gradient-content", {
        loop: true,
        spaceBetween: 0,
        speed: 700,
        autoplay: {
          delay: 2000,
          disableOnInteraction: false,
        },
        pagination: {
          el: ".gradient-swiper-pagination",
          clickable: true,
          dynamicBullets: true,
        },
        navigation: {
          nextEl: ".gradient-swiper-next",
          prevEl: ".gradient-swiper-prev",
        },
      });

      const sliderContainer = document.querySelector(".gradient-slider");
      let dropdownActive = false;

      // Correct mouseenter/mouseleave logic
      sliderContainer.addEventListener("mouseenter", () => {
        if (!dropdownActive) {
          swiperGradient.autoplay.stop(); // Stop autoplay on mouseenter
        }
      });

      sliderContainer.addEventListener("mouseleave", () => {
        if (!dropdownActive) {
          swiperGradient.autoplay.start(); // Start autoplay on mouseleave
        }
      });

      sliderContainer.addEventListener("click", (event) => {
        const selectButton = event.target.closest(".select-button");
        const option = event.target.closest(".select-dropdown li");

        if (selectButton) {
          swiperGradient.autoplay.stop();
          dropdownActive = true;
          const customSelect = selectButton.closest(".custom-select-1");
          customSelect.classList.toggle("active");

          if (customSelect.classList.contains("active")) {
            const firstOption = customSelect.querySelector(
              ".select-dropdown li"
            );
            if (firstOption) {
              firstOption.focus();
            }
          }
        } else if (option) {
          const customSelect = option.closest(".custom-select-1");
          const selectButton = customSelect.querySelector(".select-button");
          const selectedValue = customSelect.querySelector(".selected-value");

          selectedValue.textContent = option.children[1].textContent;
          customSelect.classList.remove("active");
          selectButton.focus();
          dropdownActive = false;
          if (!sliderContainer.matches(":hover")) {
            swiperGradient.autoplay.start();
          }
        }
      });

      sliderContainer.addEventListener("keydown", (event) => {
        const customSelect = event.target.closest(".custom-select-1");
        if (!customSelect) return;

        const selectButton = customSelect.querySelector(".select-button");

        if (event.key === "Enter" || event.key === " ") {
          event.preventDefault();
          if (!customSelect.classList.contains("active")) {
            selectButton.click();
          } else {
            const focused = document.activeElement;
            if (focused.closest(".select-dropdown")) {
              focused.click();
            }
          }
        } else if (
          event.key === "ArrowDown" &&
          customSelect.classList.contains("active")
        ) {
          event.preventDefault();
          const focused = document.activeElement;
          const options = customSelect.querySelectorAll(".select-dropdown li");
          const nextOption = focused.nextElementSibling || options[0];
          nextOption.focus();
        } else if (
          event.key === "ArrowUp" &&
          customSelect.classList.contains("active")
        ) {
          event.preventDefault();
          const focused = document.activeElement;
          const options = customSelect.querySelectorAll(".select-dropdown li");
          const prevOption =
            focused.previousElementSibling || options[options.length - 1];
          prevOption.focus();
        } else if (
          event.key === "Escape" &&
          customSelect.classList.contains("active")
        ) {
          customSelect.classList.remove("active");
          selectButton.focus();
          dropdownActive = false;
          if (!sliderContainer.matches(":hover")) {
            swiperGradient.autoplay.start();
          }
        }
      });

      sliderContainer.addEventListener("focusout", (event) => {
        const customSelect = event.target.closest(".custom-select-1");
        if (customSelect && customSelect.classList.contains("active")) {
          customSelect.classList.remove("active");
