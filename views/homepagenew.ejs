      function updateFormState(field, value) {
        formState[field] = value;
        document.querySelectorAll(".search-boxes").forEach((box) => {
          const input = box.querySelector(`[name=${field}][value="${value}"]`);
          if (input) {
            input.checked = true;
            const customSelect = input.closest(".custom-select-1");
            const selectButton = customSelect.querySelector(
              ".select-button .selected-value"
            );
            if (selectButton) {
              selectButton.textContent = input.nextElementSibling.textContent;
            }
          }
        });
      }

      document
        .querySelectorAll(".search-boxes input[type=radio]")
        .forEach((input) => {
          input.addEventListener("change", (e) => {
            const { name, value } = e.target;
            updateFormState(name, value);
          });
        });

      function initializeFormFields() {
        Object.entries(formState).forEach(([field, value]) => {
          if (value) updateFormState(field, value);
        });
      }

      document.querySelectorAll("form").forEach((form) => {
        form.addEventListener("submit", (e) => {
          e.preventDefault();
          const action = form.getAttribute("action");
          const queryString = new URLSearchParams(formState).toString();
          window.location.href = `${action}?${queryString}`;
        });
      });

