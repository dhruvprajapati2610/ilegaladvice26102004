async function performSearch() {
    const urlParams = new URLSearchParams(window.location.search);
    const searchInput = document.getElementById('search');
    const resultsContainer = document.querySelector('.ipc-list');
    const searchTerm = searchInput.value.trim();

    if (!searchTerm) {
        console.log('NO SEARCH TERM')
        const response1 = await fetch(`/dowry/dowry_sections/noSearchTerm`);
        const data1 = await response1.json();
                resultsContainer.innerHTML = data1.data
                    .map(section => `
                        <li>
            <span class="arrow">➤</span>
            <span class="crpc-link">
                <a href="/dowry/dowry_section?section_number=${section.section_number}">
                <span class="crpc-chp">Section ${section.section_number} - ${section.section_name}</span>
                </a>
            </span>
        </li>
                    `)
                    .join('');
            
        return;
    }
 
    try {
        const response = await fetch(`/dowry/dowry_sections/search?search=${encodeURIComponent(searchTerm)}`);
        const data = await response.json();
        if (data.success) {
            if (data.data.length > 0) {
                resultsContainer.innerHTML = data.data
                    .map(section => `
                        <li>
            <span class="arrow">➤</span>
            <span class="crpc-link">
                <a href="/dowry/dowry_section?section_number=${section.section_number}">
                <span class="crpc-chp">Section ${section.section_number} - ${section.section_name}</span>
                </a>
            </span>
        </li>
                    `)
                    .join('');
            } else {
                resultsContainer.innerHTML = '<p>No results found.</p>';
            }
        } else {
            resultsContainer.innerHTML = `<p>${data.message}</p>`;
        }
    } catch (error) {
        console.error('Error performing search:', error);
        resultsContainer.innerHTML = '<p>An error occurred while fetching results.</p>';
    }
}

