  <body>
    <%- include('partials/header') %>
    <div class="body">
      <div class="main-body">
        <div class="ipc-container">
          <div class="search-box-container">
            <div class="search-box">
              <form action="#" id="bnsSearch">
                <input
                  type="search"
                  name="search"
                  placeholder="Search for BNS Sections"
                  id="search"
                  oninput="performSearch()"
                />
                <i class="fa-solid fa-magnifying-glass"></i>
              </form>
            </div>
          </div>
          <div class="ipc-heading">
            <h1>BNS Sections</h1>
          </div>
          <div class="ipc-box">
            <ul class="ipc-list">
              <% data.forEach(function(section) { %>
              <li>
                <span class="arrow">➤</span>
                <span class="crpc-link">
                  <a
                    href="/bns/bns_section?section_number=<%=section.section_number%>"
                  >
                    <span class="crpc-chp"
                      >BNS Section <%=section.section_number%> -
                      <%=section.section_name%></span
                    >
                  </a>
                </span>
              </li>
              <% }); %>
            </ul>
          </div>
        </div>
      </div>
      <%- include('partials/footer') %>
    </div>

    <script>
      const showmenu = (toggleId, navId) => {
        const toggle = document.getElementById(toggleId),
          nav = document.getElementById(navId);

        toggle.addEventListener("click", () => {
          nav.classList.toggle("show-menu");
          toggle.classList.toggle("show-icon");
        });
      };
      showmenu("nav-toggle", "nav-menu");

      const dropdownItems = document.querySelectorAll(".dropdown-item");

      dropdownItems.forEach((item) => {
        const dropdownButton = item.querySelector(".dropdown-button");

        dropdownButton.addEventListener("click", () => {
          const showDropdown = document.querySelector(".show-dropdown");

          toggleItem(item);

          if (showDropdown && showDropdown !== item) {
            toggleItem(showDropdown);
          }
        });
      });

      const toggleItem = (item) => {
        const dropdownContainer = item.querySelector(".dropdown-container");

        if (item.classList.contains("show-dropdown")) {
          dropdownContainer.removeAttribute("style");
          item.classList.remove("show-dropdown");
        } else {
          dropdownContainer.style.height =
            dropdownContainer.scrollHeight + "px";
          item.classList.add("show-dropdown");
        }
      };
      const mediaQuery = matchMedia("(min-width:1118px)"),
        dropdownContainer = document.querySelectorAll(".dropdown-container");

      const removeStyle = () => {
        if (mediaQuery.matches) {
          dropdownContainer.forEach((e) => {
            e.removeAttribute("style");
          });

          dropdownContainer.forEach((e) => {
            e.classList.remove("show-dropdown");
          });
        }
      };
      addEventListener("resize", removeStyle);

      const crpcChp = document.querySelector(".crpc-chp");
      const crpcSections = document.querySelector(".crpc-sub-chapters");

      crpcChp.onclick = () => {
        crpcSections.classList.toggle("crpc-subsec-active");
      };

      document
        .getElementById("bnsSearch")
        .addEventListener("keydown", function (event) {
          if (event.key === "Enter") {
            event.preventDefault();
          }
        });

      async function performSearch() {
        const urlParams = new URLSearchParams(window.location.search);
        const chapterNumber = urlParams.get("chapter");
        const searchInput = document.getElementById("search");
        const resultsContainer = document.querySelector(".ipc-list");
        const searchTerm = searchInput.value.trim();

        if (!searchTerm) {
          console.log("NO SEARCH TERM");
          const response1 = await fetch(`/bns/bns_sections/${chapterNumber}`);
          const data1 = await response1.json();
          resultsContainer.innerHTML = data1.data
            .map(
              (section) => `
                        <li>
            <span class="arrow">➤</span>
            <span class="crpc-link">
                <a href="/bns/bns_section?section_number=${section.section_number}">
                <span class="crpc-chp">BNS Section ${section.section_number} - ${section.section_name}</span>
                </a>
            </span>
        </li>
                    `
            )
            .join("");

          return;
        }

        try {
          const response = await fetch(
            `/bns/bns_sections/search/${chapterNumber}?search=${encodeURIComponent(
              searchTerm
            )}`
          );
          const data = await response.json();
          if (data.success) {
            if (data.data.length > 0) {
              resultsContainer.innerHTML = data.data
                .map(
                  (section) => `
                        <li>
            <span class="arrow">➤</span>
            <span class="crpc-link">
                <a href="/bns/bns_section?section_number=${section.section_number}">
                <span class="crpc-chp">BNS Section ${section.section_number} - ${section.section_name}</span>
                </a>
            </span>
        </li>
                    `
                )
                .join("");
            } else {
              resultsContainer.innerHTML = "<p>No results found.</p>";
            }
          } else {
            resultsContainer.innerHTML = `<p>${data.message}</p>`;
          }
        } catch (error) {
          console.error("Error performing search:", error);
          resultsContainer.innerHTML =
            "<p>An error occurred while fetching results.</p>";
        }
      }
    </script>
  </body>
