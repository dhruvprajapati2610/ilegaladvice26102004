    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebPage",
        "name": "BNS Sections - Bharatiya Nyaya Sanhita",
        "description": "Explore the list of all sections under Bharatiya Nyaya Sanhita (BNS) 2023. Understand legal provisions, laws, and amendments.",
        "url": "https://www.ilegaladvice.com/bns-sections"
      }
    </script>
